<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant[:name] %></h2>
  <p><%= restaurant[:description] %></p>
  <p>Max capacity: <%= restaurant[:capacity] %></p>
  <p>Open from: <%= restaurant[:open_from] %> to <%= restaurant[:open_to] %></p>

